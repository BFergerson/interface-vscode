{
  "name": "sourceplusplus",
  "displayName": "Source++",
  "description": "This project contains the VSCode plugin for Source++, the open-source live coding platform. This plugin also works with regular Apache SkyWalking installations, but only Live View commands are supported.",
  "version": "0.6.7",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sourceplusplus.addBreakpoint",
        "title": "Source++: Add Breakpoint"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "sourceplusplus.addBreakpoint",
          "when": "activeEditor"
        }
      ]
    },
    "configuration": {
      "title": "Source++",
      "properties": {
        "sourceplusplus.host": {
          "type": "string",
          "description": "Host",
          "default": "http://localhost:12800",
          "order": 0
        },
        "sourceplusplus.accessToken": {
          "type": "string",
          "description": "Access Token",
          "default": "change-me",
          "order": 1
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sourceplusplus",
          "title": "Source++",
          "icon": "./icons/pluginIcon.svg",
          "order": 1
        }
      ]
    },
    "views":{
      "sourceplusplus":[
        {
          "id": "live-breakpoints",
          "name": "Live Breakpoints"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "8.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "16.18.37",
    "@types/vscode": "1.79.1",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "@vscode/test-electron": "2.3.3",
    "eslint": "8.43.0",
    "glob": "10.3.0",
    "mocha": "10.2.0",
    "typescript": "5.1.3",
    "webfont": "11.2.26"
  },
  "dependencies": {
    "@vertx/eventbus-bridge-client.js": "^1.0.0-3-SNAPSHOT",
    "axios": "^0.27.2"
  }
}
